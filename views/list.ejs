<%- include('header'); -%>

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    
                    <div class="box card-title" id="heading">
                        <h1> <%= listTitle %> </h1>
                    </div>
                    
